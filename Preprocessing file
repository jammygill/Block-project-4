#to convert the mirBASE gff3 to bed files
awk 'BEGIN{OFS="\t"} /^#/{next;} $3=="miRNA_primary_transcript" {split($9,id,";");sub(/ID=/,"",id[1]); print $1, $4-1, $5,id[1], "0", $7}' ath.gff3 > ath.bed

